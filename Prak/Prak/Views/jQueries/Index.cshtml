@model IEnumerable<Prak.Models.jQuery>

@{
    ViewBag.Title = "Index";
}

<h2>Список заявок на обслуживание</h2>

<p>
    @Html.ActionLink("Добавить заявку", "Create")
</p>

<h5> Предлагаю убрать груповой ID, Revelance, дату модификации (под вопросом), 
    текст (его можно показывать при переходе в детальное описание заявки). 
    Так же при переходе в детали заявки должен отображаться список работ по этой заявке. 
    Думаю не стоит выводить полный список работ, только для конкретной заявки.</h5>
<h5> "Здесь должен быть поиск по пользователю"</h5>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GroupQueryId) (+)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOut)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateIn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateModification) (?)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DeadLine)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Text) (+)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Relevance)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.hPerson.FIO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.hPerson1.FIO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.hState.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.GroupQueryId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateOut)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateIn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateModification)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DeadLine)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Text)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Relevance)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.hPerson.FIO)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.hPerson1.FIO)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.hState.Description)
        </td>
        <td>
            @Html.ActionLink("Изменить", "Edit", new { id=item.QueryId }) |
            @Html.ActionLink("Подробней", "Details", new { id=item.QueryId }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.QueryId })
        </td>
    </tr>
}

</table>
