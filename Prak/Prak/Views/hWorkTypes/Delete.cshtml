@model hWorkType

@{
    ViewBag.Title = "Delete";
}

<h2>Удаление</h2>


<div>
    <h4>Удалить тип работы?</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Название
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            Необходимое умение
        </dt>

        <dd>
            @Html.DisplayFor(model => model.hSkill.Description)
        </dd>

    </dl>

