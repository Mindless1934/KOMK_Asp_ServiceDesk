@model jWorkList

@{
    ViewBag.Title = "Edit";
}

<h2>Смена статуса работы</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        @Html.HiddenFor(model => model.WorkListId)

        <div class="query_item_id">
            @Html.LabelFor(model => model.DateIn, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DateIn, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DateIn, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="query_item_id">
            @Html.LabelFor(model => model.DateOut, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DateOut, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DateOut, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="query_item_id">
            @Html.LabelFor(model => model.DateModifcation, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DateModifcation, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DateModifcation, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="query_item_id">
            @Html.LabelFor(model => model.Deadline, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Deadline, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Deadline, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="query_item_id">
            @Html.LabelFor(model => model.QueryId, "QueryId", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("QueryId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.QueryId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.WorkTypeId, "Номер работы", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="mtop">
                    @Html.DisplayTextFor(model => model.WorkListId)
                </div>   
                <div class="query_item_id">
                    @Html.DropDownList("WorkTypeId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.WorkTypeId, "", new { @class = "text-danger" })
                    </div>
                </div>
        </div>

        <div class="query_item_id">
            @Html.LabelFor(model => model.PersonExecId, "PersonExecId", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("PersonExecId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PersonExecId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Comment, "Коментарии", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="mtop">
                    @Html.TextAreaFor(model => model.Comment, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", style = "height: 150px; width: 350px; font-size:10px;" } })
                </div>
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Добавить комментарий", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">                
                <input class="form-control" name="addCom" type="text" value="" />               
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.StateWorkId, "StateWorkId", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("StateWorkId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.StateWorkId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="query_item_id">
            @Html.LabelFor(model => model.Verification, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Verification)
                    @Html.ValidationMessageFor(model => model.Verification, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="query_item_id">
            @Html.LabelFor(model => model.Comment, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Comment, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Comment, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
