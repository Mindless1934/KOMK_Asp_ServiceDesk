@model hSkill

@{
    ViewBag.Title = "Delete";
}

<h2>Удалить</h2>

<div>
    <h4>Это больше не умение?</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Название
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
